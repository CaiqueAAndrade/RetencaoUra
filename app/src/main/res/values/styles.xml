<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0A3981</item>
        <item name="colorPrimaryDark">#0A3981</item>
        <item name="colorAccent">#0A3981</item>
    </style>

    <style name="SimpleButtonGreen">
        <item name="android:background">@drawable/button_background_green</item>
        <item name="android:color">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SimpleButtonBlue">
        <item name="android:background">@drawable/button_background_blue</item>
        <item name="android:color">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
